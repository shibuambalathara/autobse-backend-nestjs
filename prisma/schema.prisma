datasource db {
  provider = "postgresql" // or mysql or sqlite
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


enum VehicleBidStatusType {
  pending
  approved
  fulfilled
  declined
}

enum UserRoleType {
